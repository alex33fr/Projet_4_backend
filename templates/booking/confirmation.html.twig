{% extends 'base.html.twig' %}
{% block title %}
Confirmation de votre commande

{% endblock %}
{% block body %}
    <!--Table-->
    <table class="table table-striped table-hover table-sm text-center">
        <!--Table head-->
        <thead>
        <tr>
            <th>Quantité des billets : </th>
            <th>Réference de commande : </th>
            <th>L'adresse mail à laquelle les billets sont envoyés : </th>
            <th>Date de visite : </th>
        </tr>
        </thead>
        <!--Table head-->
        <!--Table body-->
        <tbody>
        <tr>
            <th scope="row">{{ booking.quantity }}</th>
            <td>{{ booking.refStripe }}</td>
            <td>{{ booking.email }}</td>
            <td>{{ booking.visitDate|date('d-m-Y') }}</td>
        </tr>
        </tbody>
        <!--Table body-->
    </table>
    <!--Table-->
{% endblock %}


