<!-- Header -->
<!doctype html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>{% block title %}Musée de Louvre{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('img/faviconLouvre.ico') }}" />
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>

<!-- Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top mb-5 text-white">
    <a class="navbar-brand" href="{{ path('home')}}"><img src="{{ asset('img/logo-louvre.jpg') }}" width="115" height="35" class="d-inline-block align-top" alt="Logo Louvre"><span class="hideTextLogo">&nbsp;&nbsp;&nbsp;Musée du Louvre</span></a>
</nav>

<!-- Body -->
<body>
<div class="container">
{% block body %}
            {% for label, messages in app.flashes %}
            {% for message in messages %}
                <div class="alert alert-{{ label }}" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
        {% endfor %}
{% endblock %}
</div>
</body>
<!-- Script -->
{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

<!-- Footer -->
{% block footer %}
{% endblock %}

</html>
