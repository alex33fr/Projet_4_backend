{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div class="rounded-0 card bg-dark text-white">
        <img class="card-img" src="http://auria.fr/wp-content/uploads/2017/03/pyramide-du-louvre-nuit.png"
             alt="Card image">
        <div class="card-img-overlay">
            <h5 class="text-center card-title mt-5">Bienvenue sur la page d'accueil!</h5>
        </div>
    </div>

    {{ form_start(form) }}
    {{ form_widget(form) }}

    <input type="submit" class="btn" value="Create"/>
    {{ form_end(form) }}

    <footer class="footer-bs">
        <div class="row">
            <div class="col-12 m-3 text-center footer-brand animated fadeInLeft">
                <p>© 2019 Musée de Louvre, tous droits réservés</p>
            </div>
        </div>
    </footer>
{% endblock %}

